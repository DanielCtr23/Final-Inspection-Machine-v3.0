<UserControl x:Class="Final_Inspection_Machine_v3._0.UC.BuenasTurno"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:SP="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             xmlns:local="clr-namespace:Final_Inspection_Machine_v3._0.UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">

    <Grid Background="#181818">
        <Grid.RowDefinitions>
            <RowDefinition Height=".7*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height=".3*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="PRODUCCIÓN" Grid.Row="0" HorizontalAlignment="Center" FontSize="46" Foreground="White" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"/>
        <SP:WpfPlot x:Name="Plot" Grid.RowSpan="4" Grid.Row="1"/>
        <TextBlock x:Name="TB" Grid.Row="2" HorizontalAlignment="Center" FontSize="44" Margin="0,20,0,0" Foreground="White"/>
        <TextBlock x:Name="TB2" Text="7:00AM - 4:35PM" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="14" Margin="7" Foreground="White"/>

    </Grid>
</UserControl>
